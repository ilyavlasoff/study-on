{% extends 'base.html.twig' %}

{% block title %}Курс "{{ course.name }}"{% endblock %}

{% block body %}
    <h1>Курс "{{ course.name }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Наименование</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Список уроков</h3>
    <ol>
        {% for lesson in course.lessons %}
            <li><a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        {% endfor %}
    </ol>

    <a href="{{ path('course_index') }}">Назад к списку курсов</a>
    <a href="{{ path('course_edit', {'id': course.id}) }}">Редактировать курс</a>
    <a href="{{ path('lesson_new', {'course': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}

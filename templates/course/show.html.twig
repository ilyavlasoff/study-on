{% extends 'base.html.twig' %}

{% block title %}Курс "{{ course.name }}"{% endblock %}

{% block body %}
    <h1>Курс "{{ course.name }}"</h1>

    <h5>Наименование</h5>
    <p>{{ course.name }}</p>

    <h5>Описание</h5>
    <p>{{ course.description }}</p>

    <h3>Список уроков</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>#</td>
                <td>Наименование</td>
            </tr>
        </thead>
        <tbody>
            {% for lesson in lessons %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        <a class="text-dark" href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h3>Действия</h3>

    <a class="btn btn-secondary mt-2" href="{{ path('course_index') }}">Назад к списку курсов</a><br>
    <a class="btn btn-dark mt-2" href="{{ path('course_edit', {'id': course.id}) }}">Редактировать курс</a><br>
    <a class="btn btn-dark mt-2 mb-2" href="{{ path('lesson_new', {'course': course.id}) }}">Добавить урок</a><br>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}

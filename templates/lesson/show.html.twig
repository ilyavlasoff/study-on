{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>{{ lesson.name }}</h1>

    <h5>Входит в курс: <a class="text-dark" href="{{ path('course_show', { 'id': lesson.course.id }) }}">{{ lesson.course.name }}</a> </h5>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-dark mb-2" href="{{ path('lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
        {{ include('lesson/_delete_form.html.twig') }}
    {% endif %}

    <p>{{ lesson.content }}</p>

{% endblock %}
